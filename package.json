{
    "name": "solo-erin",
    "description": "A Ghost theme",
    "version": "1.0.58",
    "private": true,
    "engines": {
        "ghost": ">=5.0.0"
    },
    "license": "MIT",
    "author": {
        "name": "Ghost Foundation",
        "email": "hello@ghost.org",
        "url": "https://ghost.org"
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme"
    ],
    "docs": "https://solo.ghost.io/about/",
    "config": {
        "posts_per_page": 6,
        "image_sizes": {
            "xs": {
                "width": 150
            },
            "s": {
                "width": 300
            },
            "m": {
                "width": 720
            },
            "l": {
                "width": 960
            },
            "xl": {
                "width": 1200
            },
            "xxl": {
                "width": 2000
            }
        },
        "card_assets": true,
        "custom": {
            "background_color": {
                "type": "color",
                "default": "#ffffff"
            },
            "navigation_layout": {
                "type": "select",
                "options": [
                    "Logo on the left",
                    "Logo in the middle",
                    "Stacked"
                ],
                "default": "Logo on the left"
            },
            "typography": {
                "type": "select",
                "options": [
                    "Modern sans-serif",
                    "Elegant serif",
                    "Consistent mono"
                ],
                "default": "Modern sans-serif"
            },
            "footer_text": {
                "type": "text"
            },
            "header_section_layout": {
                "type": "select",
                "options": [
                    "Side by side",
                    "Large background",
                    "Typographic profile"
                ],
                "default": "Large background",
                "group": "homepage"
            },
            "primary_header": {
                "type": "text",
                "default": "Welcome to my site",
                "group": "homepage"
            },
            "secondary_header": {
                "type": "text",
                "default": "Subscribe below to receive my latest posts directly in your inbox",
                "group": "homepage"
            },
            "post_feed_layout": {
                "type": "select",
                "options": [
                    "Classic",
                    "Typographic",
                    "Parallax"
                ],
                "default": "Classic",
                "group": "homepage"
            },
            "immersive_home": {
                "type": "boolean",
                "default": false,
                "label": "Use immersive index layout",
                "group": "homepage"
            },
            "immersive_max_posts": {
                "type": "select",
                "options": [
                    "3",
                    "4",
                    "5",
                    "6",
                    "8",
                    "10"
                ],
                "default": "6",
                "label": "Immersive: number of slides",
                "group": "homepage"
            },
            "immersive_overlay_opacity": {
                "type": "select",
                "options": [
                    "0.1",
                    "0.15",
                    "0.2",
                    "0.25",
                    "0.3",
                    "0.4",
                    "0.5"
                ],
                "default": "0.25",
                "label": "Immersive: overlay darkness",
                "group": "homepage"
            },
            "immersive_blur_px": {
                "type": "select",
                "options": [
                    "0",
                    "4",
                    "8",
                    "12",
                    "16",
                    "20"
                ],
                "default": "12",
                "label": "Immersive: background blur (px)",
                "group": "homepage"
            },
            "immersive_autoplay": {
                "type": "boolean",
                "default": false,
                "label": "Immersive: auto-advance slides",
                "group": "homepage"
            },
            "immersive_interval_ms": {
                "type": "select",
                "options": [
                    "3000",
                    "4000",
                    "5000",
                    "6000",
                    "8000",
                    "10000"
                ],
                "default": "6000",
                "label": "Immersive: auto-advance interval (ms)",
                "group": "homepage"
            },
            "immersive_rail_style": {
                "type": "select",
                "options": [
                    "Titles only",
                    "Numbers only",
                    "Titles with numbers",
                    "Dots only"
                ],
                "default": "Titles only",
                "label": "Immersive: navigation rail style",
                "group": "homepage"
            },
            "immersive_rail_position": {
                "type": "select",
                "options": [
                    "Bottom center",
                    "Bottom left",
                    "Bottom right",
                    "Side left",
                    "Side right"
                ],
                "default": "Bottom center",
                "label": "Immersive: navigation rail position",
                "group": "homepage"
            },
            "immersive_rail_size": {
                "type": "select",
                "options": [
                    "Small",
                    "Medium",
                    "Large"
                ],
                "default": "Medium",
                "label": "Immersive: navigation rail size",
                "group": "homepage"
            },
            "immersive_show_counters": {
                "type": "boolean",
                "default": true,
                "label": "Immersive: show slide counters",
                "group": "homepage"
            }
        }
    },
    "scripts": {
        "dev": "gulp",
        "test": "gscan .",
        "zip": "gulp zip"
    },
    "devDependencies": {
        "@tryghost/shared-theme-assets": "2.5.0",
        "autoprefixer": "10.4.21",
        "beeper": "2.1.0",
        "cssnano": "7.1.1",
        "gscan": "5.1.0",
        "gulp": "5.0.1",
        "gulp-concat": "2.6.1",
        "gulp-livereload": "4.0.2",
        "gulp-postcss": "10.0.0",
        "gulp-uglify": "3.0.2",
        "gulp-zip": "5.1.0",
        "ordered-read-streams": "2.0.0",
        "postcss": "8.5.6",
        "postcss-easy-import": "4.0.0",
        "pump": "3.0.3"
    }
}
